      "wwwroot/lib/bootstrap/css/bootstrap.css",
      "wwwroot/lib/fontawesome/all.min.css",
      "wwwroot/lib/select2/css/select2.min.css",
      "wwwroot/lib/select2-bootstrap4-theme/select2-bootstrap4.min.css",
